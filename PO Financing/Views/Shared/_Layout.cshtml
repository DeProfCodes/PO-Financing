    <script>

        Boot();

        function Boot()
        {
            var loggedUser = '@User.Identity.Name';
            console.log(loggedUser);
            if (loggedUser == '') 
            {
                //$("#NavContainer").addClass('justify-content-between');
                if (localStorage['currentPage'] == 'Login' || localStorage['currentPage'] == 'Register')
                {
                    $(".nav-link-default").hide();
                    $(".footer-area").hide();
                    $("#header").addClass('login-header');
                    $(".footer-area-bottom").css("margin-top","-55px");

                    if (localStorage['currentPage'] == 'Login')
                    {
                        $("#loginNav").hide();
                        $("#applyNav").hide();
                        $("#registerNav").hide();
                    }
                    if (localStorage['currentPage'] == 'Register')
                        $("#registerNav").hide();
                }
                else if (localStorage['currentPage'] == 'Home')
                {
                    $(".nav-link-default").show();
                    $(".footer-area").show();
                    $("#header").removeClass('login-header');
                    $(".footer-area-bottom").css("margin-top", "0");
                }
            }
            else 
            {
                //$("#NavContainer").removeClass('justify-content-between');

                $("#DashboardNav").removeClass('active');
                $("#POsNav").removeClass('active');
                $("#AccSettingsNav").removeClass('active');
                $("#ApplyNav2").removeClass('active');

                var activeLink = $("#DashboardNav");

                if(localStorage['currentPage'] == 'Dashboard') activeLink = $("#DashboardNav");
                if(localStorage['currentPage'] == 'Purchase Orders') activeLink = $("#POsNav");
                if(localStorage['currentPage'] == 'Account Settings') activeLink = $("#AccSettingsNav");
                if(localStorage['currentPage'] == 'Apply') activeLink = $("#ApplyNav2");

                activeLink.addClass('active');
                activeLink.addClass('fw-bold');
            }
        }

        function NavigateTo(link)
        {
            var url = "";
            if(link == 'Home')
            {
                url = '@Url.Action("Index","Home")';
            }
            if(link == 'Login')
            {
                url = '@Url.Action("Login","Account")';
            }
            window.location = url;
        }

    </script>
